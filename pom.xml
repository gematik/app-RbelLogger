    <artifactId>rbellogger</artifactId>
    <version>0.6.0</version>
    <packaging>jar</packaging>
    <description>rbellogger</description>
    <url>https://github.com/gematik/app-RbelLogger</url>

    <scm>
        <url>https://github.com/gematik/app-RbelLogger</url>
        <connection>scm:git:git://github.com/gematik/app-RbelLogger.git</connection>
        <developerConnection>scm:git:ssh://git@github.com:gematik/app-RbelLogger.git</developerConnection>
